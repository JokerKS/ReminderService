<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:local="clr-namespace:VKozenko.ReminderClient">

    <tb:TaskbarIcon x:Key="NotifyIcon" IconSource="Resources/Images/info.ico" ToolTipText="Hello World">
        <tb:TaskbarIcon.TrayToolTip>
            <Border Background="White" BorderBrush="Orange" BorderThickness="2" CornerRadius="4" Opacity="0.8" Width="160" Height="40">
                <TextBlock Text="hello world" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </tb:TaskbarIcon.TrayToolTip>
    </tb:TaskbarIcon>
</ResourceDictionary>